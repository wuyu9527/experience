<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="0dp"
                android:topRightRadius="5dp" android:bottomRightRadius="0dp"/>
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        >
        <shape>
            <solid android:color="@color/colorPrimary" />
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="0dp"
                android:topRightRadius="5dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>
</layer-list>